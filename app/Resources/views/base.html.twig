<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">


    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="http://code.jquery.com/jquery-migrate-1.1.0.js"></script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

    <!-- Bootstrap core CSS -->
    <link href="./Jumbotron Template for Bootstrap_files/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="./Jumbotron Template for Bootstrap_files/jumbotron.css" rel="stylesheet">
</head>

<body style="background-color:black">
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            </button>
            <a class="navbar-brand" href="{{ path('homepage') }}">Recrutable</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                {% if is_granted('ROLE_ENTREPRISE') %}
                    <li class="active"><a href="{{ path('offres_index') }}">Gerer mes offres<span class="sr-only">(current)</span></a></li>
                    <li class="active"><a href="{{ path('Qcm_index') }}">Gerer mes questionnaires<span class="sr-only">(current)</span></a></li>
                {% elseif is_granted('ROLE_CHOMEUR') %}
                    <li class="active"><a href="{{ path('offres_index') }}">Voir les offres<span class="sr-only">(current)</span></a></li>
                {% endif %}

            </ul>
            <form class="navbar-form navbar-right" role="search">
                {% if app.user is not null %}
                    <span class="text-muted">
                        Bonjour {{ app.user.username | capitalize }}
                    </span>
                    <span>
                        <a class="btn btn-default" href="{{ path('fos_user_security_logout') }}">
                            Se d√©connecter
                        </a>
                    </span>
                {% else %}
                    <a class="btn btn-success" href="{{ path('fos_user_security_login') }}">
                        S'authentifier
                    </a>
                    <a class="btn btn-info" href="{{ path('fos_user_registration_register') }}">
                        S'inscrire
                    </a>
                {% endif %}
            </form>
        </div>
    </div>
</nav>
<div class="container jumbotron">
    {% block body %}
    {% endblock %}
</div>
</body>
<footer class="footer">
    <div class="container text-center">
        <a href="{{ path('contact') }}"> Contacts </a>
        <a href="{{ path('apropos') }}"> A propos et CGU </a>
    </div>    
</footer>
</html>
