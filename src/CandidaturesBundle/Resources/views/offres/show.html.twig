{% extends 'base.html.twig' %}

{% block body %}
    <h3>Offres</h3>

    <table class="table table-bordered table-hover">
        <tbody>
        <tr>
            <th>Titre</th>
            <td>{{ offre.titre }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ offre.description }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="pull-right list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('offres_index') }}">Retour Ã  la liste des offres</a>
        </li>
        {% if is_granted('ROLE_ENTREPRISE') %}
            <li>
                <a class="btn btn-warning" href="{{ path('offres_edit', { 'id': offre.id }) }}">Modifier</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input class="btn btn-info btn-danger" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        {% endif %}
    </ul>
{% endblock %}
