{% block body %}
    <h3> Liste des questionnaires </h3>
    <table class="table table-hover">
        <thead>
        <tr>
            <th> Formulaire</th>
            <th> Etat </th>
            <th> Action </th>
        </tr>
        </thead>
        <tbody>
        {% for questionnaire_info in questionnaires %}
            <tr>
                <td>
                    {{ questionnaire_info.questionnaire.nom }}
                </td>
                <td>
                    {{ questionnaire_info.etat.nb_reponse }} / {{ questionnaire_info.etat.nb_question }}
                </td>
                <td>
                    {% if not questionnaire_info.qcmFini %}
                        <a class="btn-info btn" href="{{ path('postuler_questionnaire',{id_questionnaires:questionnaire_info.questionnaire.id,id_offre:offres.id}) }}">Remplir</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if qcmFinis == true %}
        <a href="{{ path('postuler_fin_offre',{id_offre:offres.id}) }}" class="btn btn-success pull-right">Postuler !</a>
    {% endif %}
{% endblock %}
