{% extends 'base.html.twig' %}

{% block body %}
    <h3> Liste des candidatures </h3>
    <table class="table table-hover">
        <thead>
        <tr>
            <th> Candidat</th>
            <th> Formulaire </th>
            <th> Score </th>
        </tr>
        </thead>
        <tbody>
        {% for candidature in candidatures %}
            {% for nomForm,score in candidature.reponses %}
                <tr>
                    <td>
                        {{ candidature.user.username }}
                    </td>
                    <td>
                       {{ nomForm }}
                    </td>
                    <td>
                        {{ score }} %
                    </td>
                </tr>
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
