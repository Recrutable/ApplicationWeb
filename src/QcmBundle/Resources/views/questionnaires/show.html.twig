{% extends 'base.html.twig' %}

{% block body %}
    <h1>Questionnaires</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ questionnaire.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ questionnaire.nom }}</td>
            </tr>
            <tr>
                <th>Domaine</th>
                <td>{{ questionnaire.domaine }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ questionnaire.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('Qcm_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('Qcm_edit', { 'id': questionnaire.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
