{% extends 'base.html.twig' %}

{% block body %}
    <h3>Liste des questions</h3>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Question</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.question }}</td>
                <td>
                    <ul class="list-inline pull-right">
                        <li>
                            <a class="btn btn-info" href="{{ path('questions_show', { 'id': question.id,id_questionnaires: questionnaire.id}) }}">Consulter</a>
                        </li>
                        <li>
                            <a class="btn btn-warning" href="{{ path('questions_edit', { 'id': question.id,id_questionnaires: questionnaire.id}) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-inline pull-right">
        <li>
             <a class="btn btn-success" href="{{ path('questions_new',{id_questionnaires: questionnaire.id}) }}">Nouvelles questions</a>
        </li>
        <li>
            <a href="{{ path('Qcm_index') }}" class="btn btn-info">Retour aux questionnaires</a>
        </li>
    </ul>
{% endblock %}
