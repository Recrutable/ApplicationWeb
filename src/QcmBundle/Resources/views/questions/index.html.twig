{% extends 'base.html.twig' %}

{% block body %}
    <h1>Questions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Reponsea</th>
                <th>Reponseb</th>
                <th>Reponsec</th>
                <th>Bonnereponse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td><a href="{{ path('questions_show', { 'id': question.id }) }}">{{ question.id }}</a></td>
                <td>{{ question.question }}</td>
                <td>{{ question.reponseA }}</td>
                <td>{{ question.reponseB }}</td>
                <td>{{ question.reponseC }}</td>
                <td>{{ question.bonneReponse }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('questions_show', { 'id': question.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('questions_edit', { 'id': question.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('questions_new'), }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
