{% extends 'base.html.twig' %}

{% block body %}
    <h1>Chomeur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chomeur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ chomeur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ chomeur.prenom }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{% if chomeur.birthday %}{{ chomeur.birthday|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ chomeur.presentation }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('profile_usr_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('profile_usr_edit', { 'id': chomeur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
